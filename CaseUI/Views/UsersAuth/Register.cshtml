@using Entities.DTOs
@model UserForRegisterDto

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <style>
        #register-div {
            position: absolute;
            left: 40%;
            top: 40%;
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 20px 20px 20px 20px;
            background-color: black;
        }
    </style>
</head>
<body>
    <div id="register-div">
        <div class="row">
            <div class="col-12">
                <form asp-controller="UsersAuth" asp-action="Register">
                    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                    <div class="form-group">
                        <label style="color: green"><b> <i class="bi bi-person-circle"></i> KAYIT</b></label>
                        @*<span class="alert-danger" m-b-5>@Html.ValidationMessage("Error1")</span>*@
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label" style="color:white"></label>
                        <input asp-for="Email" class="form-control" style="color:green" />
                        @*<span asp-validation-for="Email" class="text-danger"></span>*@
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label" style="color:white"></label>
                        <input asp-for="Password" class="form-control" style="color:green" />
                        @*<span asp-validation-for="Password" class="text-danger"></span>*@
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label" style="color:white"></label>
                        <input asp-for="FirstName" class="form-control" style="color:green" />
                        @*<span asp-validation-for="FirstName" class="text-danger"></span>*@
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label" style="color:white"></label>
                        <input asp-for="LastName" class="form-control" style="color:green" />
                        @*<span asp-validation-for="LastName" class="text-danger"></span>*@
                    </div>

                    <div class="form-group">
                        <br />
                        <input type="submit" value="Kaydol" class="btn btn-success" />
                        <input type="reset" value="Temizle" class="btn btn-danger" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>


