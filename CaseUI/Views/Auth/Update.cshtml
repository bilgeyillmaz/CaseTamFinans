@using Core.Entities.Concrete
@model User

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <style>
        #update-div {
            position: absolute;
            left: 40%;
            top: 40%;
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 20px 20px 20px 20px;
            background-color: black;
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-3" id="update-div">
            <h4 class="text-success">Kayıt Düzenleme Sayfası</h4>
            <br />
            <form asp-action="Update" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Status" />
                <input type="hidden" asp-for="PasswordHash" />
                <input type="hidden" asp-for="PasswordSalt" />
                <div class="form-group">
                    <span class="alert-danger" m-b-5>@Html.ValidationMessage("Hata")</span>
                </div>
                <div class="form-group">
                    <label class="text-white">İsim</label>
                    <input asp-for="FirstName" class="form-control" style="color:green"/>
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="text-white">Soyisim</label>
                    <input asp-for="LastName" class="form-control" style="color:green"/>
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Email" class="control-label" style="color:white">E-posta Adresi</label>
                    <input asp-for="Email" class="form-control" type="email"style="color:green"/>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-success" />
                </div>
            </form>
            <form asp-action="Delete" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Status" />
                <input type="hidden" asp-for="PasswordHash" />
                <input type="hidden" asp-for="PasswordSalt" />
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="FirstName" />
                <input type="hidden" asp-for="LastName" />
                <input type="submit" value="Sil" class="btn btn-danger" />
            </form>
        </div>
        <div class="col-md-7">
        </div>
    </div>
</body>
</html>
