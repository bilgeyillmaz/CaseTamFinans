@using Entities.DTOs
@model UserForRegisterDto

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <style>
        #register-div {
            position: absolute;
            left: 40%;
            top: 40%;
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 20px 20px 20px 20px;
            background-color: black;
        }
    </style>
</head>
<body>
    <div id="register-div">
        <div class="row">
            <div class="col-12">
                <form asp-controller="Auth" asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label style="color: green"><b> <i class="bi bi-person-circle"></i> KAYIT </b></label>
                    </div>
                    <div class="form-group">
                        <span class="alert-danger" m-b-5>@Html.ValidationMessage("Hata")</span>
                    </div>
                    <div class="form-group">
                        <label for="Email" class="control-label" style="color:white">E-posta Adresi</label>
                        <input class="form-control" type="email" name="Email" id="Email" placeholder="kullanici@kullanici.com" asp-for="Email" style="color:green">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Password" class="control-label" style="color:white">Şifre</label>
                        <input class="form-control" name="Password" type="password" id="Password" placeholder="Şifre" asp-for="Password" style="color:green">
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="FirstName" class="control-label" style="color:white">İsim</label>
                        <input class="form-control" name="FirstName" type="text" id="FirstName" placeholder="Adınız" asp-for="FirstName" style="color:green">
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="LastName" class="control-label" style="color:white">Soyisim</label>
                        <input class="form-control" name="LastName" type="text" id="LastName" placeholder="Soyadınız" asp-for="LastName" style="color:green">
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <br />
                        <input type="submit" value="Kaydol" class="btn btn-success" />
                        <input type="reset" value="Temizle" class="btn btn-danger" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>


