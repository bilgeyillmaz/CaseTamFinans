@using Entities.DTOs
@model UserForLoginDto

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <style>
        #login-div {
            position: absolute;
            left: 40%;
            top: 40%;
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 20px 20px 20px 20px;
            background-color: black;
        }
    </style>
</head>
<body>
    @if (TempData["AuthenticationFailedMessage"] != null)
    {
        <div class=" alert alert-danger" style="color: green">@TempData["AuthenticationFailedMessage"]</div>
    }
    <div id="login-div">
        <div class="row">
            <div class="col-12">

                <form asp-controller="Auth" asp-action="Login">
                    <div class="form-group">
                        <label style="color: green"><b> <i class="bi bi-person-circle"></i> GİRİŞ</b></label>
                    </div>
                    <div class="form-group">
                        <span class="alert-danger" m-b-5>@Html.ValidationMessage("Hata")</span>
                    </div>
                    <div class="form-group">
                        <label for="Email" class="control-label" style="color:white">E-posta Adresi</label>
                        <input asp-for="Email" class="form-control" style="color:green" placeholder="kullanici@kullanici.com" />
                    </div>
                    <div class="form-group">
                        <label for="Password" class="control-label" style="color:white">Şifre</label>
                        <input asp-for="Password" class="form-control" style="color:green" type="password" placeholder="Şifre" />
                    </div>

                    <div class="form-group">
                        <br />
                        <input type="submit" value="Oturum Aç" class="btn btn-success" />
                        <input type="reset" value="Temizle" class="btn btn-danger" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

